        .newvideo__add-link
          .form-group
            label.btn.btn__add.btn__add-big.upload__file.m-0(for="uploadVideoPost")
              img(src=require("../../../assets/images/svg/plus-gray.svg"), alt="")
              input#uploadVideoPost(type="file", name="videoPost")
          .form-group
            label.sr-only(for='newvideolink') Video link
            input#newvideolink.form-control.theme__secondary-form-control(type='text' placeholder='Paste a link for a video')
