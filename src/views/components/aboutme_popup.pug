//- ./src/views/components/aboutme_popup.pug

include ../mixins/modal.pug


+modalComplete('Account Details', 'addAboutMe')
  .modal-body
    form(action="", method="post")
      .form-row.form__fields-wrap
        .col-md-6.form__fields-item
          .form-group.theme__form-group
            input.form-control.theme__form-control.theme__primary-form-control.form-control__error(type='text' id='firstName')
            label.theme__label(for='firstName') First Name
            small.theme__primary-form-error
              img.theme__primary-form-error-img(src=require('../../assets/images/svg/icon-error.svg') alt='Error')
              span.theme__primary-form-error-text Error message lorem ipsum
        .col-md-6.form__fields-item
          .form-group.theme__form-group
            input.form-control.theme__form-control.theme__primary-form-control(type='text' id='lastName')
            label.theme__label(for='lastName') Last Name
        .col-md-6.form__fields-item
          .form-group.theme__form-group
            input.form-control.theme__form-control.theme__primary-form-control(type='email' id='uEmail')
            label.theme__label(for='uEmail') E-mail
        .col-md-6.form__fields-item
          .form-group.theme__form-group
            input.form-control.theme__form-control.theme__primary-form-control(type='text' id='phoneNo')
            label.theme__label(for='phoneNo') Phone no.
        .col-md-6.form__fields-item.align__flex-end
          .input-group.theme__input-group.theme__form-group
            input.form-control.theme__form-control.theme__primary-form-control.theme__datepicker(type='text' id='dob' aria-describedby='button-addon4')
            label.theme__label(for='dob') Date of Birth
            #button-addon4.input-group-append
              button.btn.btn__outline(type='button')
                img(src=require("../../assets/images/svg/icon-calendar.svg"), alt="")
        .col-md-6.form__fields-item
          .form-group
            label.theme__label(for='countrySelect') Country
            .theme__select-dropdown
              button.theme__select-dropdown-toggle(tab-index='-1') Select Country
              input(type='hidden' name='countrySelect')
              ul.theme__select-dropdown-menu
                li.theme__select-dropdown-item
                  input(type='radio' id='India' name='country' value='India')
                  label(for='India' data-tar='countrySelect') India
                li.theme__select-dropdown-item
                  input(type='radio' id='USA' name='country' value='USA')
                  label(for='USA' data-tar='countrySelect') USA
                li.theme__select-dropdown-item
                  input(type='radio' id='UK' name='country' value='UK')
                  label(for='UK' data-tar='countrySelect') UK
                li.theme__select-dropdown-item
                  input(type='radio' id='France' name='country' value='France')
                  label(for='France' data-tar='countrySelect') France
        .col-md-6.form__fields-item
          .form-group.theme__form-group
            input.form-control.theme__form-control.theme__primary-form-control(type='text' id='postCode')
            label.theme__label(for='postCode') Post Code
        .col-md-6.form__fields-item
          .input-group.theme__input-group.theme__form-group
            input.form-control.theme__form-control.theme__primary-form-control(type='text' id='location' aria-describedby='button-addon4')
            label.theme__label(for='location') Location
            #button-addon4.input-group-append
              button.btn.btn__outline(type='button')
                img(src=require("../../assets/images/svg/icon-map-pin.svg"), alt="")
        .col-lg-12
          h1.theme__form-title Profile Details
        .col-lg-12.form__fields-item
          .form-group
            label.theme__label(for='aboutme') About me
            textarea.form-control.theme__form-control(rows='3' placeholder='Write about yourself here' id='aboutme')
        .col-md-6.form__fields-item
          .form-group
            label.theme__label(for='industrySelect') Industry
            .theme__select-dropdown.theme__select-dropdown-multiple
              button.theme__select-dropdown-toggle(tab-index='-1') Select Industry
              input(type='hidden' name='industrySelect')
              ul.theme__select-dropdown-menu
                li.theme__select-dropdown-item
                  input(type='checkbox' id='Salon' name='industry' value='Salon')
                  label(for='Salon' data-tar='industrySelect') Salon
                li.theme__select-dropdown-item
                  input(type='checkbox' id='Boutique' name='industry' value='Boutique')
                  label(for='Boutique' data-tar='industrySelect') Boutique
                li.theme__select-dropdown-item
                  input(type='checkbox' id='Fashion' name='industry' value='Fashion')
                  label(for='Fashion' data-tar='industrySelect') Fashion
        .col-md-6.form__fields-item.align__flex-end
          .form-group.theme__form-group
            input.form-control.theme__form-control.theme__primary-form-control(type='text' id='experience')
            label.theme__label(for='experience') Year of Experience
        .col-md-6.form__fields-item
          .form-group.theme__form-group
            input.form-control.theme__form-control.theme__primary-form-control.add__badge(type='text' id='productsUsed')
            input(type="hidden", name="productsUsed")
            label.theme__label(for='productsUsed') Products Used
            .theme__badge-container
        .col-md-6.form__fields-item
          .form-group.theme__form-group
            input.form-control.theme__form-control.theme__primary-form-control.add__badge(type='text' id='skills')
            input(type="hidden", name="skills")
            label.theme__label(for='skills') Skills
            .theme__badge-container
      .btn__submit-wrap
        button.btn.btn__primary(type="submit") Save
