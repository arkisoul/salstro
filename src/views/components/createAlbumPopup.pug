//- ./src/views/components/createAlbumPopup.pug

include ../mixins/modal.pug

+modalComplete('Create Album', 'createAlbum')
  .create__album-container
    form(action="", method="post")
      .form-row.form__fields-wrap
        .col-lg-12.form__fields-item
          .form-group
            label.theme__label(for='albumName') Album Name
            input.form-control.theme__form-control.theme__primary-form-control(type='text', placeholder='Simple Hair Style Album' id='albumName')
        .col-lg-12.form__fields-item
          .form-group
            label.theme__label(for='description') Description
            textarea.form-control.theme__form-control(rows='3' placeholder='Write here' id='description')
        .col-lg-12.form__fields-item
          .create__album-photos
            h3.portfolio__heading Other Album
            .portfolio__album-item
              .form-group.theme__file-upload
                input#uploadAlbumImage.theme__file-upload-input(type="file", name="")
                label.theme__file-upload-label(for="uploadAlbumImage")
                  a.addnewitem__box(href='')
                    img.addnewitem__box-img(src=require('../../assets/images/svg/icon-cloud.svg') alt='Upload Image')
                    span.addnewitem__box-text Add New Album
            - for(var x = 1; x <= 8; x++)
              .portfolio__album-item
                img.portfolio__album-img(src=require('../../assets/images/img/port-0' + x + '.jpg'), alt="Portfolio")
                .portfolio__album-option
                  span.portfolio__album-text Album
                  .dropdown.custom__dropdown
                    button#portItemOpt.btn.dropdown-toggle.vertical__ellipsis-menu(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                      img(src=require("../../assets/images/svg/vertical-ellipsis.svg"), alt="")
                    .dropdown-menu(aria-labelledby='portItemOpt')
                      a.dropdown-item(href='#') Edit
                      a.dropdown-item(href='#') Delete
                      a.dropdown-item(href='#') Make Album Cover
        .col-lg-12.form__fields-item
          .newpost__options-tag
            .input-group
              .input-group-prepend
                span#options__tag.input-group-text Tags
              input.form-control(type='text' placeholder='Create tags for your topic' aria-label='Tags' aria-describedby='options__tag')
        .create__album-foot
          .userfeed__newpost-privacy
            | Privacy
            .custom__select-with-img
              select.custom-select(name='privacy')
                option(value='public' data-img="/assets/images/icon-globe.svg") Public & Community
                option(value='private' data-img="/assets/images/icon-public.svg") Public
                option(value='onlyme' data-img="/assets/images/icon-private.svg") Private
              .custom__select-selected
                img.custom__select-selected-img(src=require("../../assets/images/svg/icon-globe.svg"), alt="")
                span.custom__select-selected-text Public &amp; Community
              ul.custom__select-list
                li.custom__select-list-item(value='publiccommunity')
                  img.custom__select-img(src=require("../../assets/images/svg/icon-globe.svg"), alt="")
                  .custom__select-list-text
                    h3.custom__select-name Public &amp; Community
                    p.m-0.custom__select-text Will be shared with their connections, followers, and posted on the community wall
                li.custom__select-list-item(value='public')
                  img.custom__select-img(src=require("../../assets/images/svg/icon-public.svg"), alt="")
                  .custom__select-list-text
                    h3.custom__select-name Public
                    p.m-0.custom__select-text Shared with connections &amp; followers
                li.custom__select-list-item(value='private')
                  img.custom__select-img(src=require("../../assets/images/svg/icon-private.svg"), alt="")
                  .custom__select-list-text
                    h3.custom__select-name Private
                    p.m-0.custom__select-text Shared only with connections
          button.btn.btn__primary(type="submit") Post
