//- ./src/views/components/addinterests_popup.pug

include ../mixins/modal.pug


+modalComplete('Add Interest', 'addInterests')
  .modal-body
    form(action="", method="post")
      .form-row.form__fields-wrap
        .col-lg-12
          .form-group.theme__form-group
            input.form-control.theme__form-control.theme__primary-form-control.add__badge(type='text' id='interests')
            input(type="hidden", name="interests")
            label.theme__label(for='interests') Interests
            .theme__badge-container
      .btn__submit-wrap
        button.btn.btn__primary(type="submit") Save
