//- ./src/views/pages/hub-inspiration-gallery.pug

extends ../layouts/master.pug
include ../mixins/hub-header.pug

block title
  title Salstro - Community Hub Inspiration Gallery

block content
  //- header cum navbar
  include ../components/navbar.pug
  //- main content
  section.main-content
    .container
      .row
        .col-lg-3.col-md-4
          //- include sidebar
          // Sidebar
          include ../components/sidebar.pug
          // ./ Sidebar
        .col-lg-9.col-md-8
          section.inspired-gallery-section
            +hubHeader('Inspired Gallery Competition')

            +box('Hair Inspiration')
              .inspiration-gallery
                p.inspiration-gallery__intro Want to get recognition for your craft and inspire others? Just submit your headshot along with your inspiration story to be in with a chance of featuring on the Hall of Fame and receiving an exclusive achievement badge for your profile. Voting is based on the photo with the most likes and a winner is selected each month.
                .inspiration-gallery__nav
                  a.btn.btn__primary(href="#" data-toggle='modal' data-target='#inspirationGalleryCompetition') Enter Now
                  a.btn.btn__navigation(href="#") Beauty Inspiration
                  a.btn.btn__navigation(href="#") Visit Hall of Fame
                .inspiration-gallery__filter
                  form(action="")
                    .form-group
                      label.theme__label.sr-only(for='monthSelect') Select Month
                      .theme__select-dropdown
                        button.theme__select-dropdown-toggle(tab-index='-1') Select Month
                        input(type='hidden' name='monthSelect')
                        ul.theme__select-dropdown-menu
                          li.theme__select-dropdown-item
                            input(type='radio' id='month01' name='galleryMonth' value='July 18')
                            label(for='month01' data-tar='monthSelect') July 18
                          li.theme__select-dropdown-item
                            input(type='radio' id='month02' name='galleryMonth' value='Aug 18')
                            label(for='month02' data-tar='monthSelect') Aug 18
                          li.theme__select-dropdown-item
                            input(type='radio' id='month03' name='galleryMonth' value='Sep 18')
                            label(for='month03' data-tar='monthSelect') Sep 18
                          li.theme__select-dropdown-item
                            input(type='radio' id='month04' name='galleryMonth' value='Oct 18')
                            label(for='month04' data-tar='monthSelect') Oct 18
                .inspiration-gallery__container
                  a.inspiration-gallery__img.inspiration-gallery__img--bigger(href='')
                    img.inspiration-gallery-img(src=require('../../assets/images/img/gallery-01.jpg'), alt="Gallery")
                  a.inspiration-gallery__img.inspiration-gallery__img--big.inspiration-gallery__img--winner(href='')
                    img.inspiration-gallery-img(src=require('../../assets/images/img/gallery-02.jpg'), alt="Gallery")
                    img.winner-tag(src=require('../../assets/images/svg/winner-badge.svg'), alt="Winner")
