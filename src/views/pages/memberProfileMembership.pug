extends ../layouts/master.pug
include ../mixins/box.pug

block title
  title Salstro - Member Memberships

block content
  //- header cum navbar
  include ../components/navbar.pug
  //- main content
  section.main-content
    .container
      .row
        .col-lg-3.col-md-4
          //- include sidebar
          // Sidebar
          include ../components/sidebar.pug
          // ./ Sidebar
        .col-lg-9.col-md-8
          //- include content
          +box('Membership')
            .membership__container
              .membership__card
                .membership__card-head
                  h2.membership__title Professional
                  h1.membership__price
                    | $ 25
                    span.membership__price-time /mth
